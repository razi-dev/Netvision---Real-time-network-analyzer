# Server Configuration
NODE_ENV=development
PORT=5000

# MongoDB Configuration
MONGODB_URI=mongodb://localhost:27017/netvision
# For MongoDB Atlas: mongodb+srv://username:password@cluster.mongodb.net/netvision

# JWT Configuration
JWT_SECRET=your_super_secret_jwt_key_change_this_in_production
JWT_EXPIRE=7d

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# CORS Configuration
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:19006

# WebSocket Configuration
WS_PORT=5001

# Logging
LOG_LEVEL=info

# Measurement Settings
MAX_RADIUS_KM=50
DEFAULT_RADIUS_M=5000

# Tower Data Configuration
# OpenCellID API Key (optional - for real tower data)
# Get your free API key from: https://opencellid.org/
OPENCELLID_API_KEY=your_opencellid_api_key_here